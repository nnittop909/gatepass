<%=simple_form_for @position, remote: request.xhr?, html: { autocomplete: "off", data: { modal: true } }, url: @position.persisted? ? employee_position_path : employee_positions_path do |f| %>
  <div class="modal-body">
    <%= f.error_notification %>
    <%= f.input :user_id, input_html: { value: @employee.id }, as: :hidden %>
    <%= f.input :title %>
  </div>
  <div class="modal-footer">
    <%=f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>