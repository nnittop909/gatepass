<%=simple_form_for @system_config, remote: request.xhr?, html: { autocomplete: "off", data: { modal: true } }, url: config_system_config_path do |f| %>
	<div class="modal-body">
	  <%= f.error_notification %>
	  <%= f.input :display_time, label: "Number of Seconds", placeholder: "Enter a value in seconds" %>
	</div>
	<div class="modal-footer">
	  <%=f.submit "Update", class: "btn btn-primary" %>
	</div>
<% end %>