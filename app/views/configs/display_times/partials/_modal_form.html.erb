<%=simple_form_for @display_time, remote: request.xhr?, html: { autocomplete: "off", data: { modal: true } }, url: @display_time.persisted? ? configs_display_time_path : configs_display_times_path do |f| %>
	<div class="modal-body">
	  <%= f.error_notification %>
	  <%= f.input :number_of_seconds, label: "Number of Seconds", placeholder: "Enter a value in seconds" %>
	</div>
	<div class="modal-footer">
	  <%=f.submit @display_time.persisted? ? "Update" : "Save", class: "btn btn-primary" %>
	</div>
<% end %>